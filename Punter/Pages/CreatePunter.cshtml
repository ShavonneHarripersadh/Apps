@page
@model Punters.Pages.CreatePunterModel
@{
    ViewData["Title"] = "CreatePunter";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<p><b>Enter Your Details :</b> </p>


<form class="form-horizontal" method="POST">

        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
    

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Punter.PunterName" class="form-control" placeholder="Enter Punter Name" />
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Balance</label>
        <div class="col-sm-10">
            <input asp-for="Punter.Balance" class="form-control" placeholder="Enter Punter Balance" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default glyphicon glyphicon-ok">
                <b>Save</b> <!--yourll can figure that out-->
            </button>
        </div>
    </div>
</form>

